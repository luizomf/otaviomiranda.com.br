---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PillLink from '../components/PillLink.astro';
import { CONTACT_LINKS, EMAIL } from '../config/contacts';
import ThemeToggle from '../components/ThemeToggle.astro';
import Section from '../components/Section.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<BaseLayout
  title='Contatos | Otávio Miranda'
  description='Links oficiais e canais de contato do Otávio Miranda em uma página interna simples.'
>
  <Header />
  <ThemeToggle />

  <Section id='contacts-page' class='article-section' theme='light'>
    <SectionHeader
      class='blog-header'
      eyeball='Links oficiais'
      title='Contatos'
    >
      <p class='section-line'>
        Para qualquer contato comercial: <strong>{EMAIL}</strong>.
      </p>
    </SectionHeader>

    <ul class='contacts-list'>
      {
        CONTACT_LINKS.map(link => (
          <li class='contacts-item'>
            {link.external ? (
              <PillLink
                href={link.href}
                target='_blank'
                rel='noopener noreferrer'
                containerClass='contacts-control'
                linkClass='contacts-link'
              >
                {link.label} ↗
              </PillLink>
            ) : (
              <PillLink
                href={link.href}
                containerClass='contacts-control'
                linkClass='contacts-link'
              >
                {link.label}
              </PillLink>
            )}
          </li>
        ))
      }
    </ul>
  </Section>

  <Footer />
</BaseLayout>

<style>
  .section-header.section-header {
    margin-bottom: 0;

    p {
      margin: 0 auto;
    }
  }

  .contacts-list {
    max-width: 64rem;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--spacings-sm-500);
    margin: 0 auto;
    padding: 0;
    padding-bottom: 15rem;
  }

  .contacts-item {
    margin: 0;
    padding: 0;
  }

  .contacts-control {
    width: 100%;
  }

  .contacts-item :global(.contacts-link) {
    width: 100%;
    justify-content: center;
    text-decoration: none;
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .contacts-list {
      grid-template-columns: 1fr;
    }
  }
</style>
