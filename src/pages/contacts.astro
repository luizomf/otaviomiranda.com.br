---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PillLink from '../components/PillLink.astro';
import { CONTACT_LINKS, EMAIL } from '../config/contacts';
---

<BaseLayout
  title='Contatos | Otávio Miranda'
  description='Links oficiais e canais de contato do Otávio Miranda em uma página interna simples.'
>
  <div class='main'>
    <Header />

    <section class='section section-light article-section'>
      <div class='section-content'>
        <header class='section-header contacts-header'>
          <p class='section-eyeball'>Links oficiais</p>
          <h1 class='section-title'>Contatos</h1>
          <p class='section-line'>
            Para qualquer contato comercial: <strong>{EMAIL}</strong>.
          </p>
        </header>

        <ul class='contacts-list'>
          {
            CONTACT_LINKS.map(link => (
              <li class='contacts-item'>
                {link.external ? (
                  <PillLink
                    href={link.href}
                    target='_blank'
                    rel='noopener noreferrer'
                    containerClass='contacts-control'
                    linkClass='contacts-link'
                  >
                    {link.label} ↗
                  </PillLink>
                ) : (
                  <PillLink
                    href={link.href}
                    containerClass='contacts-control'
                    linkClass='contacts-link'
                  >
                    {link.label}
                  </PillLink>
                )}
              </li>
            ))
          }
        </ul>
      </div>
    </section>
  </div>

  <Footer />
</BaseLayout>

<style>
  .section-header.section-header {
    margin-bottom: 0;

    p {
      margin: 0 auto;
    }
  }

  .contacts-header {
    align-items: flex-start;
    max-width: 64rem;
  }

  .contacts-list {
    max-width: 64rem;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--spacings-sm-500);
    margin: 0 auto;
    padding: 0;
  }

  .contacts-item {
    margin: 0;
    padding: 0;
  }

  .contacts-control {
    width: 100%;
  }

  .contacts-link {
    width: 100%;
    justify-content: center;
    text-decoration: none;
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .contacts-list {
      grid-template-columns: 1fr;
    }
  }
</style>
